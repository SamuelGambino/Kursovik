<Page x:Class="Kursovik1.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovik1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid Background="White" Margin="0,-4,0,4">

        <Rectangle Height="50" Fill="#FF252525" VerticalAlignment="Top"/>
        <Label Content="Вход" HorizontalAlignment="Left" Height="40" Margin="202,0,0,0" VerticalAlignment="Top" Width="60" FontSize="24" Foreground="#DDFFFFFF"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Height="40" Margin="512,0,0,0" VerticalAlignment="Top" Width="145" FontSize="24" Foreground="#DDFFFFFF"/>
        <Rectangle HorizontalAlignment="Center" Height="50" Stroke="White" VerticalAlignment="Top" Width="1"/>
        <Button x:Name="Reg" Content="Регистрация" HorizontalAlignment="Left" Margin="400,-2,0,0" VerticalAlignment="Top" Width="400" Height="52" Background="#FF252525" FontSize="22" BorderBrush="White"/>
        <Button x:Name="Vxod" Content="Вход" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="52" Background="#FF252525" FontSize="22" Margin="0,-2,0,0" BorderBrush="White" Cursor="Hand"/>
    </Grid>
</Page>
